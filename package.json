{
  "name": "vox",
  "version": "0.0.0",
  "description": "voxel world",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "lint-js": "standard",
    "lint-css": "stylelint **/*.css --config node_modules/stylelint-config-standard/index.js",
    "test": "npm run lint-js && npm run lint-css",
    "build": "mkdirp build && browserify -t brfs src/ > build/bundle.js && cp -r static/* build/",
    "start": "npm run build && http-server build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/dcposch/gl.git"
  },
  "author": "",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/dcposch/gl/issues"
  },
  "dependencies": {
    "game-shell": "^1.3.2",
    "gl-mat4": "^1.1.4",
    "regl": "^1.2.1"
  },
  "devDependencies": {
    "brfs": "^1.4.3",
    "browserify": "^13.1.0",
    "http-server": "^0.9.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    "standard": "^8.3.0",
    "stylelint": "^7.3.1",
    "stylelint-config-standard": "^13.0.2"
  }
}
